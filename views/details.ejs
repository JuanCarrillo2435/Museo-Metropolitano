<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
body {
  background: linear-gradient(to bottom right, #e0f7fa, #fffde7);
}
    </style>
    <title>Details</title>
</head>
<body>
    <div>
        <h1 class="display-4 text-center text-primary my-4">Detalles de la Obra</h1>
        <div class="container mt-5">

            <div class="row">
            <div class="col-12 text-center mb-4" >
            <h1 class="display-4"> <%= object.title %></h1>
        </div>
    </div> 

       <div class="row justify-content-center mb-5">
    <div class="col-md-8 text-center">
            <% if (object.primaryImage && object.primaryImage.trim() !== '') { %>
                <h2 class="section-title">Imagen Principal</h2>
                <img src="<%= object.primaryImage %>" alt="<%= object.title %>" style="max-width: 200px;"><br>
                <% } %>
                <hr>
            </div>
        </div>     


                <h2 class="section-title">Imagenes secundarias</h2>
                <div class="row">
                <% object.additionalImages.forEach(image => { %>
                    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                        <div class="text-center">
                    <img src="<%= image %>" class="img-fluid rounded shadow-sm" alt="Imagen adicional">
                    </div>
                </div>
                    <% }) %>
                </div>
        </div>
    </div>
</body>
</html>